{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./backend",
    "outDir": "./backend/dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./backend/**/*"],
  "exclude": ["./frontend", "node_modules"]
}
